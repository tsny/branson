generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(sequence())
    createdAt DateTime @default(now())
    likes     Int      @default(0)
    author    User     @relation(fields: [authorID], references: [id])
    authorID  Int

    content String?
}

model User {
    id        Int     @id @default(sequence())
    boins     Int     @default(0)
    email     String  @unique
    firstName String?
    lastName  String?
    isAdmin   Boolean @default(false)
    posts     Post[]
    rules     Rule[]
}

model Rule {
    id       Int    @id @default(sequence())
    content  String
    author   User   @relation(fields: [authorID], references: [id])
    authorID Int
    fine     Int    @default(1)
}
