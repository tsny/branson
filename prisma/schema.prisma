generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(sequence())
    createdAt DateTime @default(now())
    likes     Int      @default(0)
    author    User     @relation(fields: [authorID], references: [id])
    authorID  Int

    content String?
}

model User {
    id            Int             @id @default(sequence())
    boins         Int             @default(0)
    upboinsGiven  Int             @default(0)
    dust          Int             @default(0)
    email         String          @unique
    lastSpin      DateTime        @default(now())
    profilePicURL String?
    firstName     String?
    lastName      String?
    isAdmin       Boolean         @default(false)
    role          String?         @default("user")
    numPacks      Int             @default(0)
    posts         Post[]
    CardOwnership CardOwnership[]
    CardHistory   CardHistory[]
    Business      Business[]
}

model Business {
    id       Int      @id @default(sequence())
    name     String
    location String   @default("branson")
    service  String?
    members  String[]
    founder  User     @relation(fields: [userId], references: [id])
    userId   Int
    bio      String?
    logoURL  String?
}

model Rule {
    id         Int    @id @default(sequence())
    content    String
    authorName String @default("unknown")
    fine       Int    @default(1)
}

model Card {
    id            Int             @id @default(sequence())
    rarity        String          @default("common")
    type          String
    title         String
    desc          String
    quote         String?
    imageURL      String?
    weight        Int             @default(50)
    dustValue     Int             @default(10)
    CardOwnership CardOwnership[]
    CardHistory   CardHistory[]
}

model Achievement {
    id   Int    @id @default(sequence())
    desc String
}

model Config {
    name  String @id
    value String
}

model CardOwnership {
    id     Int     @id @default(sequence())
    isFoil Boolean @default(false)
    user   User    @relation(fields: [userId], references: [id])
    userId Int
    card   Card    @relation(fields: [cardId], references: [id])
    cardId Int
}

model CardHistory {
    id     Int    @id @default(sequence())
    user   User   @relation(fields: [userId], references: [id])
    userId Int
    card   Card   @relation(fields: [cardId], references: [id])
    cardId Int
    action String
}

model CardPack {
    id        Int @id @default(sequence())
    cost      Int @default(1)
    cardCount Int @default(3)
}
